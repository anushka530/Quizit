<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context="Fragments.ProfileFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="96dp"
        android:layout_width="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:src="@drawable/man"
        android:layout_marginTop="16dp"
        android:id="@+id/profileImage"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp" android:id="@+id/emailBoxProfile" app:layout_constraintTop_toBottomOf="@+id/profileImage" android:padding="15dp" android:inputType="textPersonName" android:hint="Email Address" android:ems="10" android:background="@drawable/textbox" android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp" android:id="@+id/nameBox" app:layout_constraintTop_toBottomOf="@+id/emailBoxProfile" android:padding="15dp" android:inputType="textPersonName" android:hint="Name" android:ems="10" android:background="@drawable/textbox" android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp" android:id="@+id/passBox" app:layout_constraintTop_toBottomOf="@+id/nameBox" android:padding="15dp" android:inputType="textPersonName" android:hint="Password" android:ems="10"  android:background="@drawable/textbox" android:layout_marginRight="20dp" android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn"
        android:text="Update Profile"
        app:backgroundTint="#8996E1"
        app:layout_constraintEnd_toEndOf="@+id/passBox"
        app:layout_constraintStart_toStartOf="@+id/passBox"
        app:layout_constraintTop_toBottomOf="@+id/passBox" />

</androidx.constraintlayout.widget.ConstraintLayout>